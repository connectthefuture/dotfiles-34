[user]
    name = drm2
    email = davidrmyersii@gmail.com
    hosts = github.com
    hosts = bitbucket.org
[hub]
    host = github.com
[core]
    filemode = false
    pager = cat
    hooksPath = ~/.git-templates/hooks
[alias]
    adda = add -A -v
    comm = commit -v
    hist = log --graph --pretty=format:'%C(auto)%h [%an] (%cr) -%d %s' --date=relative --max-count=20
    history = log --graph --pretty=format:'%C(auto)%h [%an] (%cr) -%d %s' --date=relative
    stat = status -vv
[push]
    default = simple
[init]
    templatedir = ~/.git-templates
